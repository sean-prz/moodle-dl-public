{
  "name": "moodle-dl",
  "productName": "Moodle Downloader",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "author": "Sean Perazzolo",
  "description": "An app to automatically download Pdfs from moodle",
  "bin": "release/modle-dw.js",
  "scripts": {
    "compile": "tsc",
    "elec": "cp -r src/public/* dist/public/ && tsc && electron dist/electron/main.js",
    "start": "electron-forge start",
    "build": "esbuild src/main.ts --bundle --platform=node --outfile=release/moodle-dw.js --external:better-sqlite3 --external:open &&  cp src/public/* release/public/",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.15",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.9.1",
    "body-parser": "^1.20.3",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "jquery": "^3.7.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.0.15",
    "winston": "^3.17.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^22.13.4",
    "@types/ws": "^8.18.0",
    "electron": "^35.0.2",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3"
  },
  "private": true,
  "pkg": {
    "scripts": "release/moodle-dw.js",
    "targets": [
      "node18.5-macos-arm64",
      "node18.5-win-x64"
    ],
    "assets": [
      "node_modules/better-sqlite3/build/Release/better_sqlite3.node",
      "node_modules/open/index.js"
    ],
    "outputPath": "release"
  }
}
